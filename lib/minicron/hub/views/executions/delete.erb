<header>
  <h2>Delete Execution #<%= @execution.number %> for Job '<%= @execution.job.safe_name %>'?</h2>
</header>
<hr/>

<form class="form-horizontal" role="form" method="POST">
  <input type="submit" class="btn btn-danger" value="Delete Execution"/>
  <a href="<%= "#{route_prefix}/execution/#{@execution.id}" %>" class="btn btn-info">Cancel</a>
</form>
